---
interface SocialLink {
  name: string;
  href: string;
  icon: string;
  ariaLabel: string;
}

const socialLinks: SocialLink[] = [
  { 
    name: 'LinkedIn', 
    href: 'https://www.linkedin.com/in/syahreza-adnan/',
    icon: 'linkedin',
    ariaLabel: 'Visit Syahreza Adnan LinkedIn profile'
  },
  { 
    name: 'GitHub', 
    href: 'https://github.com/SyahrezaAdnanAlAzhar',
    icon: 'github',
    ariaLabel: 'Visit Syahreza Adnan GitHub profile'
  },
  { 
    name: 'Email', 
    href: 'mailto:syahreza.adnan29@gmail.com',
    icon: 'email',
    ariaLabel: 'Send email to Syahreza Adnan'
  },
  { 
    name: 'Behance', 
    href: 'https://www.behance.net/SyahrezaAdnan',
    icon: 'behance',
    ariaLabel: 'Visit Syahreza Adnan Behance profile'
  },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-black/50 border-t border-(--color-border) mt-20">
  <div class="max-w-7xl mx-auto px-4 md:px-8 py-12">
    <!-- Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
      <!-- About Section -->
      <div class="space-y-4">
        <h3 class="font-heading text-2xl font-bold" style="color: var(--color-primary);">
          Syahreza Adnan
        </h3>
        <p class="text-sm text-white/70 max-w-md">
          Software Engineering student passionate about web development, mobile apps, and AI/ML. 
          Always eager to learn new technologies and solve real-world problems through code.
        </p>
      </div>

      <!-- Social Links -->
      <div class="space-y-4">
        <h4 class="font-heading text-lg font-semibold" style="color: var(--color-primary);">
          Connect With Me
        </h4>
        <div class="flex flex-wrap gap-4">
          {socialLinks.map(social => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-center gap-2 px-4 py-2 rounded-lg border border-(--color-border) transition-all duration-300 hover:border-(--color-primary) hover:bg-(--color-primary)/10"
              aria-label={social.ariaLabel}
            >
              {social.icon === 'linkedin' && (
                <svg class="w-5 h-5 transition-colors duration-300 text-white/70 group-hover:text-(--color-primary)" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {social.icon === 'github' && (
                <svg class="w-5 h-5 transition-colors duration-300 text-white/70 group-hover:text-(--color-primary)" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              )}
              {social.icon === 'email' && (
                <svg class="w-5 h-5 transition-colors duration-300 text-white/70 group-hover:text-(--color-primary)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              )}
              {social.icon === 'behance' && (
                <svg class="w-5 h-5 transition-colors duration-300 text-white/70 group-hover:text-(--color-primary)" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M22 7h-7v-2h7v2zm1.726 10c-.442 1.297-2.029 3-5.101 3-3.074 0-5.564-1.729-5.564-5.675 0-3.91 2.325-5.92 5.466-5.92 3.082 0 4.964 1.782 5.375 4.426.078.506.109 1.188.095 2.14h-8.027c.13 3.211 3.483 3.312 4.588 2.029h3.168zm-7.686-4h4.965c-.105-1.547-1.136-2.219-2.477-2.219-1.466 0-2.277.768-2.488 2.219zm-9.574 6.988h-6.466v-14.967h6.953c5.476.081 5.58 5.444 2.72 6.906 3.461 1.26 3.577 8.061-3.207 8.061zm-3.466-8.988h3.584c2.508 0 2.906-3-.312-3h-3.272v3zm3.391 3h-3.391v3.016h3.341c3.055 0 2.868-3.016.05-3.016z"/>
                </svg>
              )}
              <span class="text-sm font-medium text-white/70 group-hover:text-(--color-primary) transition-colors duration-300">
                {social.name}
              </span>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="pt-8 border-t border-(--color-border)">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-white/50 text-center md:text-left">
          Â© {currentYear} Syahreza Adnan Al Azhar. All rights reserved.
        </p>
        <p class="text-xs text-white/30 text-center md:text-right">
          Built with <span style="color: var(--color-primary);">Astro</span>, 
          <span style="color: var(--color-primary);">GSAP</span>, and 
          <span style="color: var(--color-primary);">Tailwind CSS</span>
        </p>
      </div>
    </div>
  </div>
</footer>
