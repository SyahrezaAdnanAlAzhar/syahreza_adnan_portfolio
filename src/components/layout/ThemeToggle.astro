---
// ThemeToggle component for switching between dark and light modes
---

<button
  id="theme-toggle"
  class="relative p-2 rounded-lg transition-all duration-300 hover:bg-white/10"
  aria-label="Toggle theme"
  title="Toggle theme"
>
  <!-- Sun Icon (Light Mode) -->
  <svg
    id="sun-icon"
    class="w-6 h-6 transition-all duration-300"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    ></path>
  </svg>

  <!-- Moon Icon (Dark Mode) -->
  <svg
    id="moon-icon"
    class="w-6 h-6 hidden transition-all duration-300"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    ></path>
  </svg>
</button>

<script>
  function initThemeToggle() {
    const themeToggle = document.getElementById('theme-toggle');
    const sunIcon = document.getElementById('sun-icon');
    const moonIcon = document.getElementById('moon-icon');
    const html = document.documentElement;
    const body = document.body;

    // Get current theme from localStorage or default to 'dark'
    let currentTheme = localStorage.getItem('theme') || 'dark';

    // Function to update UI based on theme
    function updateThemeUI() {
      if (currentTheme === 'dark') {
        sunIcon?.classList.remove('hidden');
        moonIcon?.classList.add('hidden');
        html.classList.add('dark');
        html.classList.remove('light');
        body.classList.add('dark');
        body.classList.remove('light');
      } else {
        sunIcon?.classList.add('hidden');
        moonIcon?.classList.remove('hidden');
        html.classList.remove('dark');
        html.classList.add('light');
        body.classList.remove('dark');
        body.classList.add('light');
      }
    }

    // Initialize theme on load
    updateThemeUI();

    // Toggle theme on button click
    themeToggle?.addEventListener('click', () => {
      currentTheme = currentTheme === 'dark' ? 'light' : 'dark';
      localStorage.setItem('theme', currentTheme);
      updateThemeUI();

      // Dispatch custom event for other components to listen
      document.dispatchEvent(new CustomEvent('theme-changed', { detail: currentTheme }));
    });
  }

  // Initialize on page load
  initThemeToggle();

  // Re-initialize on navigation (for Astro view transitions if used)
  document.addEventListener('astro:page-load', initThemeToggle);
</script>

<style>
  #theme-toggle {
    color: var(--color-primary);
  }

  #theme-toggle:hover {
    color: var(--color-accent);
    transform: rotate(15deg);
  }

  #theme-toggle svg {
    transition: transform 0.3s ease;
  }
</style>
