---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import ExpandableCard from '../components/cards/ExpandableCard.astro';
import ConnectorLine from '../components/ui/ConnectorLine.astro';
import OptimizedImage from '../components/ui/OptimizedImage.astro';

// Get all awards sorted by order and render them
const awardsData = (await getCollection('awards'))
  .sort((a, b) => a.data.order - b.data.order);

const awards = await Promise.all(
  awardsData.map(async (award) => ({
    ...award,
    Content: (await award.render()).Content
  }))
);
---

<Layout 
  title="Honors & Awards - Syahreza Adnan"
  description="My achievements in various competitions including hackathons, research programs, and essay competitions."
>
  <main class="min-h-screen py-24 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Page Header -->
      <div class="text-center mb-16">
        <h1 class="font-heading text-4xl sm:text-5xl md:text-6xl font-bold text-glow-yellow mb-4">
          Honors & Awards
        </h1>
        <p class="text-lg text-white/70 max-w-2xl mx-auto">
          Recognition and achievements from hackathons, research programs, and academic competitions.
        </p>
      </div>

      <!-- Awards List -->
      <div class="space-y-8">
        {awards.map((award, index) => (
          <div class="relative">
            <ExpandableCard id={`award-${award.id}`} defaultExpanded={index === 0}>
              <!-- Header Slot -->
              <div slot="header" class="flex flex-col gap-4 w-full">
                <!-- Award Image -->
                <div class="relative w-full h-48 rounded-lg overflow-hidden bg-white/5">
                  <OptimizedImage 
                    src={award.data.image}
                    alt={award.data.title}
                    class="w-full h-full object-cover"
                    width={800}
                    height={400}
                  />
                </div>

                <!-- Header Info -->
                <div class="space-y-2">
                  <h3 class="font-heading text-xl md:text-2xl font-semibold" style="color: var(--color-primary);">
                    {award.data.title}
                  </h3>
                  <p class="text-white font-medium">
                    {award.data.organizer}
                  </p>
                  <div class="flex flex-wrap items-center gap-3 text-sm text-white/70">
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                      {award.data.date}
                    </span>
                  </div>
                </div>
              </div>

              <!-- Content Slot -->
              <div slot="content" class="space-y-6">
                <!-- Description -->
                <div class="prose prose-invert prose-lg max-w-none">
                  <award.Content />
                </div>
              </div>
            </ExpandableCard>

            <!-- Connector Line (not for last item) -->
            {index < awards.length - 1 && (
              <div class="flex justify-center my-6">
                <ConnectorLine />
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </main>
</Layout>
