---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/layout/Navbar.astro';
import OptimizedImage from '../../components/ui/OptimizedImage.astro';

// Get base URL for proper routing
const base = import.meta.env.BASE_URL;
const baseUrl = base.endsWith('/') ? base : `${base}/`;

// Generate static paths for all projects
export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

// Color mapping for project types
const colorMap = {
  software: {
    cardBg: 'rgba(59, 130, 246, 0.05)',
    badgeBg: 'rgba(59, 130, 246, 0.15)',
    border: 'rgba(59, 130, 246, 0.3)',
    accent: 'rgb(59, 130, 246)',
  },
  ai: {
    cardBg: 'rgba(99, 102, 241, 0.05)',
    badgeBg: 'rgba(99, 102, 241, 0.15)',
    border: 'rgba(99, 102, 241, 0.3)',
    accent: 'rgb(99, 102, 241)',
  },
};

const colors = colorMap[project.data.projectType];
---

<Layout 
  title={`${project.data.title} | Syahreza Adnan`}
  description={project.data.description}
>
  <Navbar />
  
  <main class="project-detail-main">
    <div class="project-detail-container">
      <!-- Back Button -->
      <a href={`${base}`} class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back to Home
      </a>

      <!-- Project Header -->
      <header class="project-header">
        <!-- Cover Image -->
        <div class="cover-image-container">
          <OptimizedImage 
            src={project.data.image}
            alt={project.data.title}
            class="cover-image"
            width={1200}
            height={600}
            loading="eager"
          />
        </div>

        <!-- Title and Meta -->
        <div class="project-meta">
          <div class="meta-badges">
            <span class="category-badge">{project.data.category}</span>
            <span 
              class="type-badge"
              style={`background-color: ${colors.badgeBg}; border-color: ${colors.border};`}
            >
              {project.data.projectType === 'software' ? 'Software Project' : 'AI Project'}
            </span>
          </div>

          <h1 class="project-title">{project.data.title}</h1>
          
          <p class="project-description">{project.data.description}</p>

          <!-- Tech Stack -->
          {project.data.techStack && project.data.techStack.length > 0 && (
            <div class="tech-stack-section">
              <h3 class="tech-stack-label">Tech Stack</h3>
              <div class="tech-badges">
                {project.data.techStack.map((tech) => (
                  <span 
                    class="tech-badge"
                    style={`background-color: ${colors.badgeBg}; border-color: ${colors.border};`}
                  >
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          )}

          <!-- Project Link -->
          {project.data.projectLink && (
            <a 
              href={project.data.projectLink}
              target="_blank"
              rel="noopener noreferrer"
              class="project-link"
              style={`background-color: ${colors.accent};`}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
              </svg>
              View on GitHub
            </a>
          )}
        </div>
      </header>

      <!-- Project Content (from Markdown) -->
      <article class="project-content prose prose-invert">
        <Content />
      </article>
    </div>
  </main>
</Layout>

<style>
  .project-detail-main {
    min-height: 100vh;
    padding-top: 6rem;
    padding-bottom: 4rem;
  }

  .project-detail-container {
    max-width: 56rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Back Link */
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
    text-decoration: none;
    margin-bottom: 2rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: #ffffff;
  }

  /* Project Header */
  .project-header {
    margin-bottom: 3rem;
  }

  .cover-image-container {
    aspect-ratio: 16 / 9;
    border-radius: 1rem;
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .cover-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Meta */
  .project-meta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .meta-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .category-badge {
    padding: 0.25rem 0.75rem;
    background-color: #ffffff;
    color: #000000;
    font-size: 0.75rem;
    font-weight: 400;
    border-radius: 9999px;
  }

  .type-badge {
    padding: 0.25rem 0.75rem;
    border: 1px solid;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 9999px;
  }

  .project-title {
    font-family: 'Quantico', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: #ffffff;
    line-height: 1.2;
  }

  .project-description {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.125rem;
    line-height: 1.7;
  }

  /* Tech Stack */
  .tech-stack-section {
    margin-top: 0.5rem;
  }

  .tech-stack-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .tech-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-badge {
    padding: 0.375rem 0.75rem;
    border: 1px solid;
    border-radius: 9999px;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.8125rem;
    font-weight: 500;
  }

  /* Project Link Button */
  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    color: #ffffff;
    font-size: 0.9375rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.5rem;
    margin-top: 0.5rem;
    transition: opacity 0.2s ease, transform 0.2s ease;
    width: fit-content;
  }

  .project-link:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  /* Project Content (Markdown) */
  .project-content {
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.8;
  }

  .project-content :global(h2) {
    font-family: 'Quantico', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .project-content :global(h3) {
    font-family: 'Quantico', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #ffffff;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .project-content :global(p) {
    margin-bottom: 1rem;
  }

  .project-content :global(ul),
  .project-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .project-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .project-content :global(a) {
    color: #60a5fa;
    text-decoration: underline;
  }

  .project-content :global(a:hover) {
    color: #93c5fd;
  }

  .project-content :global(code) {
    background-color: rgba(255, 255, 255, 0.1);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .project-content :global(pre) {
    background-color: rgba(0, 0, 0, 0.4);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  .project-content :global(pre code) {
    background-color: transparent;
    padding: 0;
  }

  /* Responsive */
  @media (min-width: 640px) {
    .project-detail-container {
      padding: 0 2rem;
    }

    .project-title {
      font-size: 2.5rem;
    }
  }

  @media (min-width: 1024px) {
    .project-detail-container {
      padding: 0 3rem;
    }

    .project-title {
      font-size: 3rem;
    }

    .project-description {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 639px) {
    .project-detail-main {
      padding-top: 5rem;
    }

    .project-detail-container {
      padding: 0 1rem;
    }

    .project-title {
      font-size: 1.5rem;
    }

    .project-description {
      font-size: 1rem;
    }

    .cover-image-container {
      margin-left: -1rem;
      margin-right: -1rem;
      border-radius: 0;
    }
  }
</style>
